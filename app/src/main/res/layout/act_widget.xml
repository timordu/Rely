<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/bar_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 指纹识别 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="指纹识别测试" />

            <Button
                android:id="@+id/fingerprint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="指纹识别" />


            <!-- NumberProgressBar测试 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="NumberProgressBar测试" />

            <com.android.rely.widget.progressbar.NumberProgressBar
                android:id="@+id/numberProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- DateTimePicker测试 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:padding="@dimen/dp_10"
                android:text="DateTimePicker测试" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="日期"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="时间"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/datetime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="日期+时间"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>

            <!-- 自定义EditText测试 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:padding="@dimen/dp_10"
                android:text="自定义EditText测试" />

            <com.android.rely.widget.edittext.ClearEditText
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_account"
                android:drawablePadding="@dimen/dp_10"
                android:padding="@dimen/dp_10" />

            <com.android.rely.widget.edittext.PasswordEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_pwd"
                android:drawablePadding="@dimen/dp_10"
                android:padding="@dimen/dp_10" />

            <!-- 自定义IndexBar测试 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="SideIndexBar测试" />

            <Button
                android:id="@+id/sideIndexBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Side_Index_Bar Demo" />

            <!-- ImagePreview测试 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="ImagePreview测试" />

            <ImageView
                android:id="@+id/single_image"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_margin="@dimen/dp_10"
                android:scaleType="centerCrop"/>

            <com.android.rely.common.listview.AllItemGridView
                android:id="@+id/multi_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:verticalSpacing="@dimen/dp_20"
                android:numColumns="3" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>