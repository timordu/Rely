<resources>
    <declare-styleable name="SideIndexBar">
        <attr name="letterSize" format="dimension" />
        <attr name="letterColor" format="color" />
        <attr name="selectedLetterColor" format="color" />
    </declare-styleable>

    <declare-styleable name="NumberProgressBar">
        <attr name="progress" format="integer" />
        <attr name="max" format="integer" />

        <attr name="reached_color" format="color" />
        <attr name="reached_bar_height" format="dimension" />

        <attr name="unreached_color" format="color" />
        <attr name="unreached_bar_height" format="dimension" />

        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="text_offset" format="dimension" />
        <attr name="text_suffix" format="string" />
        <attr name="text_prefix" format="string" />
    </declare-styleable>
</resources>