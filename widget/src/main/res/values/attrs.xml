<resources>
    <declare-styleable name="SideIndexBar">
        <attr name="letterSize" format="dimension" />
        <attr name="letterColor" format="color" />
        <attr name="selectedLetterColor" format="color" />
    </declare-styleable>

    <declare-styleable name="NumberProgressBar">
        <attr name="progressValue" format="integer" />
        <attr name="max" format="integer" />

        <attr name="reached_color" format="color" />
        <attr name="reached_bar_height" format="dimension" />

        <attr name="unreached_color" format="color" />
        <attr name="unreached_bar_height" format="dimension" />

        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="text_offset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PwdInputView">
        <attr name="maxCount" format="integer" />
        <!-- 内容类型 -->
        <attr name="contentType" format="enum">
            <enum name="pwd" value="0" />
            <enum name="number" value="1" />
        </attr>
        <!-- 密码圆点半径和颜色 -->
        <attr name="pwdRadius" format="dimension" />
        <attr name="pwdColor" format="color" />
        <!-- 边界类型 -->
        <attr name="borderType" format="enum">
            <enum name="frame" value="0" />
            <enum name="singleFrame" value="2" />
            <enum name="underLine" value="1" />
        </attr>
        <attr name="borderColor" format="color" />
        <attr name="secondBorderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderAngle" format="dimension" />
        <attr name="numberSize" format="dimension" />
        <attr name="numberColor" format="color" />
    </declare-styleable>
</resources>